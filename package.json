{
  "name": "cypress-visual-regression",
  "version": "3.0.0",
  "description": "Module for adding visual regression testing to Cypress",
  "repository": "https://github.com/cypress-visual-regression/cypress-visual-regression",
  "author": "Michael Herman <michael@mherman.org>",
  "license": "MIT",
  "keywords": [
    "visual regression",
    "image diff",
    "cypress"
  ],
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts ./src",
    "lint:fix": "eslint --ignore-path .eslintignore --fix --ext .js,.ts ./src",
    "format": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "format:fix": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "./node_modules/.bin/cypress run --env type=actual",
    "base": "./node_modules/.bin/cypress run --env type=base",
    "_prepublish": "npm run jest && npm run lint && npm run prettier:check && npm run build",
    "prebuild": "rimraf dist",
    "prepare": "npm run build",
    "ci": "export SNAPSHOT_DIRECTORY=cypress/snapshots && npm run build && npm run base && npm test",
    "jest": "jest tests"
  },
  "dependencies": {
    "pixelmatch": "^5.2.1",
    "pngjs": "^6.0.0",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^28.1.1",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "cypress": ">=12.9.0"
  },
  "files": [
    "dist/**/*"
  ],
  "ignore": [
    "src",
    "docker",
    "tests"
  ],
  "types": "dist/command.d.ts"
}
